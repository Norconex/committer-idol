<!-- All possible Committer configuration options, with default values
  -- when applicable.
  -->
<committer class="com.norconex.committer.idol.IdolCommitter">
    <host></host>
    <aciPort>9000</aciPort>
    <indexPort>9001</indexPort>
    <databaseName></databaseName>
    <dreAddDataParams>
       <param name=""></param>
    </dreAddDataParams>
    <dreDeleteRefParams>
       <param name=""></param>
    </dreDeleteRefParams>
    <idSourceField keep="flase">document.reference</idSourceField>
    <idTargetField>DREREFERENCE</idTargetField>
    <contentSourceField keep="false" />
    <contentTargetField>DRECONTENT</contentTargetField>
    <queueDir>./committer-queue</queueDir>
    <queueSize>1000</queueSize>
    <commitBatchSize>100</commitBatchSize>
</committer>
