<!-- This configuration shows the minimum required and minimum recommended 
	to run a crawler. -->

<httpcollector id="Minimal Config HTTP Collector">

	<!-- Location where internal progress files are stored. -->
	<progressDir>c:\temp\stephen\workdir\progress</progressDir>

	<!-- Location where logs are stored. -->
	<logsDir>c:\temp\stephen\workdir\logs</logsDir>

	<crawlers>
		<crawler id="Minimal Config Wikipedia 1-page Crawl">

			<workDir>c:</workDir>

			<!-- === Minimum required: =========================================== -->

			<!-- Requires at least one start URL. -->
			<startURLs>
				<url>http://laws-lois.justice.gc.ca/eng/acts/</url>
			</startURLs>

			<!-- === Minimum recommended: ======================================== -->

			<!-- Put a maximum depth to avoid infinite crawling (e.g. calendars). -->
			<maxDepth>1</maxDepth>

			<!-- Be as nice as you can to sites you crawl. -->
			<delay default="5000" />

			<!-- At a minimum make sure you stay on your domain. -->
			<httpURLFilters>
				<filter class="com.norconex.collector.http.filter.impl.RegexURLFilter"
					caseSensitive="false" onMatch="include">
					http://laws-lois\.justice\.gc\.ca/eng/ACTs/.*
				</filter>
				<filter class="com.norconex.collector.http.filter.impl.RegexURLFilter"
					caseSensitive="false" onMatch="include">
					http://laws-lois\.justice\.gc\.ca/eng/IndexStatutoryInstruments/.*
				</filter>
			</httpURLFilters>

			<!-- Decide what to do with your files by specifying a committer. -->
			<committer class="com.norconex.committer.idol.IdolCommitter">
				<idolHost>192.168.0.202</idolHost>
				<idolPort>9000</idolPort>
				<idolIndexPort>9001</idolIndexPort>
				<idolDbName>Test</idolDbName>
				<dreAddDataParams>
					<param name="priority">100</param>
				</dreAddDataParams>
				<dreDeleteRefParams>
					<param name="priority">100</param>
				</dreDeleteRefParams>
				<referenceField keep="true">DREREFERENCE</referenceField>
				<contentField keep="false">DRECONTENT</contentField>
				<queueDir>queue</queueDir>
				<batchSize>50</batchSize>
				<idolBatchSize>15</idolBatchSize>
			</committer>
		</crawler>
	</crawlers>

</httpcollector>
